# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~

# Polygons events
GET     /api/polygons                   controllers.PolygonController.configure

# Decision function events
GET     /api/probability                controllers.ProbabilityController.configure

# Home page
GET     /                           controllers.FrontController.index(any = "")

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)

# Vue Router
GET     /*any                        controllers.FrontController.index(any)